version: 0.2
env:
  variables:
    WORKSTREAM: "edm"
    APP_NAME: "customapps"
  parameter-store:
    DOCKERHUB_USER: "/av-edm/cicd/dockerhub-user"
    DOCKERHUB_TOKEN: "/av-edm/cicd/dockerhub-token"
    ARTIFACTORY_USER: "/av-edm/cicd/streamlit-docker-artifactory-user"
    ARTIFACTORY_KEY: "/av-edm/cicd/streamlit-docker-artifactory-api-key"
    ARTIFACTORY_URL: "/av-edm/cicd/streamlit-docker-artifactory-url"

phases:
  install:
    runtime-versions:
      python: 3.12
    commands:
      - pip install cfn-lint --quiet
      
  pre_build:
    commands:
      - echo "Pre-build checks"
      - aws sts get-caller-identity
      - aws s3api head-bucket --bucket "$CFN_PACKAGE_BUCKET"
      - ls -la templates/
      
  build:
    commands:
      - echo "Validating templates"
      - cfn-lint templates/*.yml --ignore-checks W3002 W3010 || true
      - echo "Packaging CloudFormation"
      - aws cloudformation package --template-file templates/root.yml --s3-bucket "$CFN_PACKAGE_BUCKET" --s3-prefix cfn-templates --output-template-file packaged-root.yml
      - ls -la packaged-root.yml
      
  post_build:
    commands:
      - echo "Build complete"

artifacts:
  files:
    - packaged-root.yml
    - params/*.json
  name: BuildArtifact
